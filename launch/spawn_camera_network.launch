<launch>
  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find sparse_dynamic_calibration)/urdf/camera_network.urdf.xacro'" />

  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -model camera_network -param robot_description" if="false"/>

  <node pkg="robot_state_publisher" type="state_publisher" name="camnet_pub">
    <remap from="robot_description" to="robot_description"/>
  </node>
</launch>
